{
  "manifest_version": 2,
  "name": "StayZen",
  "version": "1.0.0",
  "description": "Stay calm, stay focused. Block distractions and track productivity with Pomodoro timers.",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/blocker.js", "content/tracker.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addons.mozilla.org.zkjly@passmail.net",
      "strict_min_version": "109.0"
    }
  }
}
